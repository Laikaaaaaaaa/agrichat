# AGRISENSE AI - API CONFIGURATION
# Copy this file to .env and fill in your actual API keys

# === PRIMARY AI API ===
# OpenAI GPT API (Primary chatbot API)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-nano
OPENAI_TEMPERATURE=0.7

# === FALLBACK APIs ===
# API Key Gemini (Multiple keys separated by comma)
GEMINI_API_KEYS=your_gemini_key_1,your_gemini_key_2

# DeepSeek API (Fallback when both OpenAI and Gemini fail)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.7

# Weather API Key (Get from weatherapi.com - Free tier available)
WEATHER_API_KEY=your_weather_api_key_here

# Default Weather Location (Only used when IP geolocation fails)
DEFAULT_WEATHER_CITY=Hồ Chí Minh
DEFAULT_WEATHER_REGION=Hồ Chí Minh
DEFAULT_WEATHER_COUNTRY=Việt Nam
DEFAULT_WEATHER_COUNTRY_CODE=VN
DEFAULT_WEATHER_LAT=10.762622
DEFAULT_WEATHER_LON=106.660172
DEFAULT_WEATHER_TZ=Asia/Ho_Chi_Minh

# Cache TTL (in seconds)
IP_LOOKUP_CACHE_TTL=900
WEATHER_CACHE_TTL=300

# === STOCK PHOTO APIs (FREE) ===

# Unsplash API
UNSPLASH_ACCESS_KEY=your_unsplash_key_here

# Pixabay API  
PIXABAY_API_KEY=your_pixabay_key_here

# Pexels API
PEXELS_API_KEY=your_pexels_key_here

# === PIPELINE CONFIGURATION ===

# Default pipeline mode
PIPELINE_MODE=advanced

# Cache settings
ENABLE_CACHE=true
CACHE_DURATION_HOURS=24

# Performance settings
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT_SECONDS=10
